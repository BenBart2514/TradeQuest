<div id='header'>
    <% if @page_name == nil %>
        <h1>TradeQuest</h1>
    <% else %>
        <h1><%= "#{@page_name}" %></h1>
    <% end %>
</div>
<% unless @top_link == nil %>
    <nav id='topnav'>
        <span><%= link_to "#{@top_link}", @link_path %></span>
        <span><%= "#{current_user.hero.name} | #{current_user.hero.renown} Renown" %></span>
        <span><%= link_to 'Logout', destroy_user_session_path, method: 'delete' %></span>
    </nav>
<% end %>